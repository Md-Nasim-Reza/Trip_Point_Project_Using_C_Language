                fclose(ss);

            }

        }
        A++;
        count++;
    }
    fclose(sia);

    printf("\n\n\n");
    printf("\n");
    printf("1. ADD PLACES\n");
    printf("2. NEXT SELECT HOTELS ");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        Gaibandha();
        break;
    case 2:
        Gaibandhahotel();
        break;
    }
}
