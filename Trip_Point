// EDIT PREMIUMPACK
void premipack()
{
    int opt2;
    system("cls");
    box(66,3,94,7);
gotoxy(69,5);
printf(" ..EDIT HOT PACKAGE.. ");
box(43,10,114,21);
    gotoxy(69,13);
    printf("||1.Create Packages");
    gotoxy(69,14);
    printf("||2.Display Packages");
    gotoxy(69,15);
    printf("||3.Append Packages");
    gotoxy(69,16);
    printf("||4.Update Budget Money");
    gotoxy(69,17);
    printf("||5.Delete Items");
    gotoxy(69,18);
    printf("||6.Back To Home");
box3(43,24,114,26);
    gotoxy(46,25);
	printf("         Enter Your Choice:       ");

    scanf("%d", &opt2);
    switch(opt2)
    {
    case 1:

        ptcreate();
        break;
    case 2:
        ptdisplay();
        break;
    case 3:
        ptdisplay3();
        ptappend();
        break;
    case 4:
        ptdisplay3();
        ptupdate();
        break;
    case 5:
        ptdisplay3();
        ptdelete();
        break;
    case 6:
        menu2();
        break;

    }
}

void ptcreate()
{
    int opt6;
    country *p;
    FILE *pt;
    int n,i,j;
    system("cls");
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    pt = fopen("premiumpack1.txt", "w");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        fflush(stdin);
        printf("\tEnter time duration : ");
        scanf("%[^\n]s", p[i].days);

        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);

        fflush(stdin);
        printf("\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);


        fwrite(&p[i],sizeof(country),1,pt);
    }

    fclose(pt);

    printf("\n\t\t||1.SHOW PREMIUM PACKAGE");
    printf("\n\t\t||2.BACK to Edit premium pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt6);
    switch(opt6)
    {
    case 1:
        ptdisplay();
        break;
    case 2:
        premipack();
        break;
    case 3:
        EX();
        break;
    }

}


