void htappend()
{
    int opt8;
    country *p;
    FILE *ht;
    int n,i,j;
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    ht = fopen("hotpack1.txt", "a");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);

        fflush(stdin);
        printf("\tEnter time duration: ");
        scanf("%[^\n]s", p[i].days);
        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);
        fflush(stdin);
        printf("\tEnter hotel name: ");
        scanf("%[^\n]s", p[i].hotel);

        fwrite(&p[i],sizeof(country),1,ht);
    }

    fclose(ht);
    printf("\n\t\t\t\tYour new place has been append\n");
    printf("\n\t\t||1.SHOW NEW HOTPACKAGE");
    printf("\n\t\t||2.BACK to Edit Hot package");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt8);
    switch(opt8)
    {
    case 1:
        htdisplay();
        break;
    case 2:
        hotpack2();
        break;
    case 3:
        EX();
        break;
    }
}

void htupdate()
{
    int opt9;
    country p1;
    FILE *ht, *ht1;
    int srno,found=0;
    ht = fopen("hotpack1.txt", "r");
    ht1 = fopen("httemp.txt", "w");
    printf("\tEnter the place serial no update: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,ht))
    {
        if(p1.srno == srno)
        {
            found = 1;
            fflush(stdin);
            printf("\tEnter the new  money: ");
            scanf("%d", &p1.money);

        }
        fwrite(&p1,sizeof(country),1,ht1);
    }
    fclose(ht);
    fclose(ht1);
    if(found)
    {
        ht1 = fopen("httemp.txt", "r");
        ht = fopen("hotpack1.txt","w");

        while(fread(&p1,sizeof(country),1,ht1))
        {
            fwrite(&p1,sizeof(country), 1, ht);
        }
        fclose(ht);
        fclose(ht1);
        printf("\n\t\t\t\tYour new place Budget has been update\n");
        printf("\n\t\t||1.SHOW HOTPACKAGE");
        printf("\n\t\t||2.BACK to Edit Hot package");
        printf("\n\t\t||3.EXIT");
        printf("\n\n\t>>Enter the choice>> _ ");
        scanf("%d",&opt9);
        switch(opt9)
        {
        case 1:
            htdisplay();
            break;
        case 2:
            hotpack2();
            break;
        case 3:
            EX();
            break;
        }
    }

    else
        printf("\nNot found\n");
    fclose(ht);

}



void htdelete()
{
    int opt10;
    country p1;
    FILE *ht, *ht1;
    int srno,found=0;
    ht = fopen("hotpack1.txt", "r");
    ht1 = fopen("httemp.txt", "w");
    printf("\tEnter the place serial no delete: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,ht))
    {
        if(p1.srno == srno)
        {
            found = 1;
        }
        else
            fwrite(&p1,sizeof(country),1,ht1);
    }
    fclose(ht);
    fclose(ht1);
    if(found)
    {
        ht1 = fopen("httemp.txt", "r");
        ht = fopen("hotpack1.txt","w");

        while(fread(&p1,sizeof(country),1,ht1))
        {
            fwrite(&p1,sizeof(country), 1, ht);
        }
        fclose(ht);
        fclose(ht1);
        printf("\n\t\t\t\tYour new place has been delete.\n");
        printf("\n\t\t||1.SHOW HOTPACKAGE");
        printf("\n\t\t||2.BACK to Edit Hot package");
        printf("\n\t\t||3.EXIT");
        printf("\n\n\t>>Enter the choice>> _ ");
        scanf("%d",&opt10);
        switch(opt10)
        {
        case 1:
            htdisplay();
            break;
        case 2:
            hotpack2();
            break;
        case 3:
            EX();
            break;
        }
    }

    else
        printf("\nNot found\n");
    fclose(ht);
}

