    printf("\n\n\n\t\t\t\t\t\t\tHOW MANY NIGHT YOU WANT TO STAY....?");
    printf("\n\n\t\t\t\t\t\t\tENTER THE NUMBER OF NIGHT :  ");
    int day;
    scanf("%d",&day);
    itotal= itotal* day;
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(" PRESS ENTER TO BOOK YOUR TICKET ");

    getch();
    FRANCEticket();

}





//
void FRANCEticket()
{
    system("cls");
    int opt13;
    FILE *cg;
    printf("\n\n\n\n\n\t\t\t\t\t\t\t\t\t DHAKA TO FRANCE ALL TRANSPORT PANEL");
    printf("\n\n\n\t\t\t\t\t\t\t\t\t         FRANCE FLIGHT RENTAL\n\n\n\n\n\n");
    cg = fopen("FRANCE ticket.txt","r");

    char input[512];
    while(fgets(input,512,cg))
    {

        printf("%s",input);
    }
    fclose(cg);
    printf("\n\n\n");
    ADD1004();
}




//
void ADD1004()
{

    int opt13;

    FILE *sia = fopen("FRANCE ticket.txt","r");
    char line[599];
    FILE *tk = fopen("FRANCEtickettk.txt","r");
    char total2[100];

    int c,count=1,count1=1;
    printf("\n\n\n>>Choose option>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            FILE *cg;
            printf(" \t\t\tTICKET ADDED...!!");
            cg = fopen("customerdis.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(cg);
            FILE *adb;
            adb = fopen("admin user booking info.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(adb);
//            printf("%s",line);
            FILE *ss;
            ss = fopen("user selection.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(ss);
        }

        count++;
    }
    while(fgets(total2,sizeof(total2),tk))
    {
        if(c==count1)
        {
            itotal2+=atoi(total2);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(">>PRESS ENTER TO ADD HOW MANY SEAT YOU WANT.... ");
    getch();
    numtic();

}






