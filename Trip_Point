void ptappend()
{
    int opt8;
    country *p;
    FILE *pt;
    int n,i,j;
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    pt = fopen("premiumpack1.txt", "a");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        fflush(stdin);
        printf("\tEnter time duration : ");
        scanf("%[^\n]s", p[i].days);
        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);
        fflush(stdin);
        printf("\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);



        fwrite(&p[i],sizeof(country),1,pt);
    }

    fclose(pt);
    printf("\n\t\t\t\tYour new place has been append.\n");
    printf("\n\t\t||1.SHOW NEW PREMIUM PACKAGE");
    printf("\n\t\t||2.BACK to Edit premium pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt8);
    switch(opt8)
    {
    case 1:
        ptdisplay();
        break;
    case 2:
        premipack();
        break;
    case 3:
        EX();
        break;
    }
}
void ptupdate()
{
    int opt9;
    country p1;
    FILE *pt, *pt1;
    int srno,found=0;
    pt = fopen("premiumpack1.txt", "r");
    pt1 = fopen("pttemp.txt", "w");
    printf("\tEnter the place serial no update: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,pt))
    {
        if(p1.srno == srno)
        {
            found = 1;
            fflush(stdin);
            printf("\tEnter the new  money: ");
            scanf("%d", &p1.money);

        }
        fwrite(&p1,sizeof(country),1,pt1);
    }
    fclose(pt);
    fclose(pt1);
    if(found)
    {
        pt1 = fopen("pttemp.txt", "r");
        pt = fopen("premiumpack1.txt","w");

        while(fread(&p1,sizeof(country),1,pt1))
        {
            fwrite(&p1,sizeof(country), 1, pt);
        }
        fclose(pt);
        fclose(pt1);
    }

    else
        printf("\nNot found\n");
    fclose(pt);
    printf("\n\t\t\t\tYour new place Budget has been update.\n");
    printf("\n\t\t||1.SHOW NEW PREMIUM PACKAGE");
    printf("\n\t\t||2.BACK to Edit premium pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt9);
    switch(opt9)
    {
    case 1:
        ptdisplay();
        break;
    case 2:
        premipack();
        break;
    case 3:
        EX();
        break;
    }

}

void ptdelete()
{
    int opt10;
    country p1;
    FILE *pt, *pt1;
    int srno,found=0;
    pt = fopen("premiumpack1.txt", "r");
    pt1 = fopen("pttemp.txt", "w");
    printf("\tEnter the place serial no delete: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,pt))
    {
        if(p1.srno == srno)
        {
            found = 1;
        }
        else
            fwrite(&p1,sizeof(country),1,pt1);
    }
    fclose(pt);
    fclose(pt1);
    if(found)
    {
        pt1 = fopen("pttemp.txt", "r");
        pt = fopen("premiumpack1.txt","w");

        while(fread(&p1,sizeof(country),1,pt1))
        {
            fwrite(&p1,sizeof(country), 1, pt);
        }
        fclose(pt);
        fclose(pt1);
    }

    else
        printf("\nNot found\n");
    printf("\n\t\t\t\tYour new place has been Deleted.\n");
    printf("\n\t\t||1.SHOW NEW PREMIUM PACKAGE");
    printf("\n\t\t||2.BACK to Edit premium pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt10);
    switch(opt10)
    {
    case 1:
        ptdisplay();
        break;
    case 2:
        premipack();
        break;
    case 3:
        EX();
        break;
    }
}

