//

void ADD502()
{

    int opt13;

    FILE *sia = fopen("INDIA hotels.txt","r");
    char line[599];
    FILE *tk = fopen("INDIAhotelstk.txt","r");
    char total[100];

    int c,count=1,count1=1;
    printf("\n\n\n>>Choose option>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            FILE *cg;
            printf(" \t\t\tHOTEL ADDED...!!");
            cg = fopen("customerdis.txt","a");
            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(cg);
            FILE *adb;
            adb = fopen("admin user booking info.txt","a");
            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(adb);
            FILE *ss;
            ss = fopen("user selection.txt","a");

            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(ss);
//            printf("%s",line);
        }

        count++;
    }
    while(fgets(total,sizeof(total),tk))
    {
        if(c==count1)
        {
            itotal+=atoi(total);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(">> PRESS ENTER TO ADD PEOPLES... ");
    getch();
    person100();

}


void person100()
{
    int opt13;
    system("cls");
    printf("\n\n\n\t\t\t\t\t\t\tHOW MANY PEOPLE YOU WANT TO BOOK FOR TRIP....?");
    printf("\n\n\t\t\t\t\t\t\tENTER THE NUMBER OF PEOPLE :  ");
    int people;
    scanf("%d",&people);
    itotal= itotal* people;
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");
    printf(" >> PRESS ENTER TO ADD NIGHT TO STAY...\n");
    getch();
    tday100();





}



void tday100()
{

    system("cls");
    printf("\n\n\n\t\t\t\t\t\t\tHOW MANY NIGHT YOU WANT TO STAY....?");
    printf("\n\n\t\t\t\t\t\t\tENTER THE NUMBER OF NIGHT :  ");
    int day;
    scanf("%d",&day);
    itotal= itotal* day;
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(" PRESS ENTER TO BOOK YOUR TICKET ");

    getch();
    INDIAticket();

}





