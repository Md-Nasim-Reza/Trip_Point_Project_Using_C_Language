            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(ss);
        }

        count++;
    }
    while(fgets(total2,sizeof(total2),tk))
    {
        if(c==count1)
        {
            itotal2+=atoi(total2);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
