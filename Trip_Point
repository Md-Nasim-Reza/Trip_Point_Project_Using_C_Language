    printf("================================================================================================================================================================================\n\n");
    char input[512];
    while(fgets(input,512,cg))
    {

        printf("%s",input);
    }
    printf("\n\n================================================================================================================================================================================");

    fclose(cg);
    printf("\n\n\n");
    printf("");
    printf("\n\n\n");
    printf("\n||1.HOMEPAGE");
    printf("\n||2.EXIT");
    printf("\n\n>>Choose option>>_  ");
    scanf("%d",&opt13);
    switch(opt13)
