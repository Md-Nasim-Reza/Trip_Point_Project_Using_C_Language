        {
            case 1:
            menu2();
            break;
        case 2:
            homepage();
            break;
        case 3:
            EX();
            break;
        }
        break;
    case 2:
     printf("\n\t\t                                     Please Try again");
        printf("\n\t\t                                     1.Admin Panel Sign Up");
        printf("\n\t\t                                     2.Admin Login");
        printf("\n\t\t                                     3.User Sign Up");
        printf("\n\t\t                                     4.User Login");
        printf("\n\t\t                                     5.Exit");
        printf("\n\n\t\t                                   Enter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            reg2();
            break;
        case 2:

            login2();
            break;
        case 3:
            reg();
            break;
        case 4:
            login();
            break;
        case 5:
            EX();
            break;

        }
        break;
    case 3:
     printf("\n\t\t                                     Please Try again");
        printf("\n\t\t                                     1.Admin Panel Sign Up");
        printf("\n\t\t                                     2.Admin Login");
        printf("\n\t\t                                     3.User Sign Up");
        printf("\n\t\t                                     4.User Login");
        printf("\n\t\t                                     5.Exit");
        printf("\n\n\t\t                                   Enter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            reg2();
            break;
        case 2:
            login2();
            break;
        case 3:
            reg();
            break;
        case 4:
            login();
            break;
        case 5:
            EX();
            break;
        }
        break;
    }
}

void EX()
{
    system("cls");
    printf("                  We will always expect you to come back. Thank you for trusting us\n\n");
    printf("                                 _____________PROGGRAM END____________\n\n\n ");
}


void type(const char *p)
{
    if(NULL==p)
        return;
    while (*p)
    {
        printf("%c\xDB",*p++);
        Sleep(30);
        printf("\b \b");
        Sleep(30);
    }
    Sleep(300);

}
void type2(const char *p)
{

    if(NULL==p)
        return;
    while (*p)
    {
        printf("%c\xDB",*p++);
        Sleep(30);
        printf("\b \b");
        Sleep(30);
    }
    Sleep(1000);

}



