void addbudgetpack()
{

    int opt13,A=0;
    FILE *sia = fopen("budget pack details.txt","r");
    char line[599];
    FILE *tk = fopen("budgetpack tk.txt","r");
    char total[100];

    int c,count=1,count1=1;

    printf("\n\n\n>>CHOOSE PLACES>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            if(A==0)
            {
                FILE *cg;
                printf(" \t\t\tPACK ADDED...!!");
                cg = fopen("customerdis.txt","w");
                fprintf(cg,"YOUR COMFIRM PACK : %s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(adb,"_________________________________________________________________________________________________________________________________________________________________________________\nCUSTOMER CHOICES:\n\n");

                fprintf(cg,"BUDGET PACK : %s\n\n",line);
                fclose(adb);
                FILE *ss;
                {
                    ss = fopen("user selection.txt","a");
                    fprintf(ss,"_________________________________________________________________________________________________________________________________________________________________________________\nYOUR BOOKED TRIP:\n\n");

                    fprintf(cg,"BUDGET PACK : %s\n\n",line);
                }

                fclose(ss);
            }
            else
            {
                FILE *cg;
                printf(" \t\t\tPACK ADDED...!!");
                cg = fopen("customerdis.txt","a");
                fprintf(cg,"YOUR COMFIRM PACK : %s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"BUDGET PACK : %s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");

                fprintf(cg,"BUDGET PACK : %s\n\n",line);
                fclose(ss);
            }

        }
        A++;
        count++;
    }


    while(fgets(total,sizeof(total),tk))
    {
        if(c==count1)
        {
            itotal+=atoi(total);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);

    printf("\n\n\n");
    printf("\n");
    printf("1. ADD PACK\n");
    printf("2. SELECT GUIDER");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        btdisplay2();
        break;
    case 2:
        btguide();
        break;
    }
}

void btguide()
{
    system("cls");
    FILE *SIA = fopen("GUIDER.txt","r");
    char line[599];
    printf("\n\n\n\t\t\t\t\t\tDO YOU NEED A GUIDER OR ADVISER TO GUIDE YOUR TRIP WITH YOU.............. ?? ");
    printf("\n\n\t\t\t\t\t\tIF YOU WANT GUIDER WITH YOU THEN PAY MORE 3000 MONEY\n\n\t\t\t\t\t\tPRESS '1.YES' IF YOU WANT OR PRESS 'NO, IF YOU DONT WANT");
    printf("\n\t\t\t\t\t\t1. YES\n\t\t\t\t\t\t2. NO");
    printf("\n\n\n>>Choose option>>_  ");
    int choic,count=1,a=0;
    scanf("%d",&choic);
    switch(choic)
    {
    case 1:

        while(fgets(line,sizeof(line),SIA))
        {

            if(choic==count)
            {
                FILE *cg;
                printf("\n \t\t\t\tSO...! OUR GUIDER WILL ACCOMPANY YOU ON YOUR TRIP....!!");
                itotal+=3000;
                printf("\n\n\nTOTAL TAKA: %d /=",itotal);
                cg = fopen("customerdis.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(ss);
                printf("\n\n\n\n\t\t>> PRESS ENTER TO DIAPLAY YOUR BUDGET PACK... ");
                getch();
                budgetpackdisplay();
            }
            count++;
        }
        break;
    case 2:
        while(fgets(line,sizeof(line),SIA))
        {

            if(choic==count)
            {

                FILE *cg;
                printf("\n\n\t\t\t\tNO GUIDER WILL ACCOMPANY YOU ");

                cg = fopen("customerdis.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(ss);
                printf("\n\n\n\n\t\t>> PRESS ENTER TO DIAPLAY YOUR BUDGET PACK... ");
                getch();
                budgetpackdisplay();

            }
            count++;
        }
        break;
    }
}




void budgetpackdisplay()
{

    system("cls");
    int opt13;
    FILE *cg;
    cg = fopen("customerdis.txt","r");
    printf("\n\n\n\t\t\t\t\t\t_________HERE YOUR CHOOSEN PACK DISPLAYED BELLOW_________\n\n\n\n\n");
    printf("================================================================================================================================================================================\n");
    char input[512];
    while(fgets(input,512,cg))
    {

        printf("%s",input);
    }
    printf("================================================================================================================================================================================");

    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    fclose(cg);
    printf("\n\n\n");
    printf("");
    printf("1. CONFIRM YOUR TRIP \n");
    printf("2. EXIT");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        payment();
        break;
    case 2:
        EX();
        break;
    }
}






// EDIT CLASSIC PACK
void classicpack()
{
    int opt2;
    system("cls");
    box(66,3,94,7);
gotoxy(69,5);
printf(" ..EDIT CLASSIC PACK.. ");
box(43,10,114,21);
    gotoxy(69,13);
    printf("||1.Create Packages");
    gotoxy(69,14);
    printf("||2.Display Packages");
    gotoxy(69,15);
    printf("||3.Append Packages");
    gotoxy(69,16);
    printf("||4.Update Budget Money");
    gotoxy(69,17);
    printf("||5.Delete Items");
    gotoxy(69,18);
    printf("||6.Back To Home");
box3(43,24,114,26);
    gotoxy(46,25);
	printf("         Enter Your Choice:       ");

    scanf("%d", &opt2);
    switch(opt2)
    {
    case 1:

        ctcreate();

        break;
    case 2:
        ctdisplay();
        break;
    case 3:
        ctdisplay3();
        ctappend();
//        ctdisplay4();
        break;
    case 4:
        ctdisplay3();
        ctupdate();
//        ctdisplay4();
        break;
    case 5:
        ctdisplay3();
        ctdelete();
//        ctdisplay4();
        break;
    case 6:
        menu2();
        break;
    }
}

void ctcreate()
{
    int opt6;
    country *p;
    FILE *ct;
    int n,i,j;
    system("cls");
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    ct = fopen("classicpack1.txt", "w");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        fflush(stdin);
        printf("\tEnter time duration : ");
        scanf("%[^\n]s", p[i].days);

        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);

        fflush(stdin);
        printf("\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);

        fwrite(&p[i],sizeof(country),1,ct);
    }

    fclose(ct);
//    printf("\n\n\t\t||-----DISPLAY CLASSIC PACKAGE-----||");
    printf("\n\t\t||1.SHOW CLASSIC PACKAGE");
    printf("\n\t\t||2.BACK to Edit classic pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt6);
    switch(opt6)
    {
    case 1:
        ctdisplay();
        break;
    case 2:
        classicpack();
        break;
    case 3:
        EX();
        break;
    }

}


