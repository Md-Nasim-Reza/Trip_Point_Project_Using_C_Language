        break;

    }

}
void htcreate()
{
    int opt6;
    country *p;
    FILE *ht;
    int n,i,j;
    system("cls");
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    ht = fopen("hotpack1.txt", "w");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        fflush(stdin);
        printf("\tEnter time duration : ");
        scanf("%[^\n]s", p[i].days);

        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);

        fflush(stdin);
        printf("\tEnter hotel name: ");
        scanf("%[^\n]s", p[i].hotel);

        fwrite(&p[i],sizeof(country),1,ht);
    }

    fclose(ht);
//        printf("\n\n\t\t||-----DISPLAY HOTPACKAGE-----||");
    printf("\n\t\t||1.SHOW HOTPACKAGE");
    printf("\n\t\t||2.BACK to Edit Hot package");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt6);
    switch(opt6)
    {
    case 1:
        htdisplay();
        break;
    case 2:
        hotpack2();
        break;
    case 3:
        EX();
        break;
    }

}




