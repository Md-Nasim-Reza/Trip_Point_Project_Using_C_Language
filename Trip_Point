void ADD157()
{

    int opt13;

    FILE *sia = fopen("Shariatpur hotels.txt","r");
    char line[599];
    FILE *tk = fopen("Shariatpurhotelstk.txt","r");
    char total[100];

    int c,count=1,count1=1;
    printf("\n\n\n>>Choose option>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            FILE *cg;
            printf(" \t\t\tHOTEL ADDED...!!");
            cg = fopen("customerdis.txt","a");
            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(cg);
            FILE *adb;
            adb = fopen("admin user booking info.txt","a");
            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(adb);
            FILE *ss;
            ss = fopen("user selection.txt","a");

            fprintf(cg,"HOTEL : %s\n\n",line);
            fclose(ss);
//            printf("%s",line);
        }

        count++;
    }
    while(fgets(total,sizeof(total),tk))
    {
        if(c==count1)
        {
            itotal+=atoi(total);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(">> PRESS ENTER TO ADD PEOPLES... ");
    getch();
    person52();

