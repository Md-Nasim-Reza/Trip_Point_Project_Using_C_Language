void ctappend()
{
    int opt8;
    country *p;
    FILE *ct;
    int n,i,j;
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    ct = fopen("classicpack1.txt", "a");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        fflush(stdin);
        printf("\tEnter time duration : ");
        scanf("%[^\n]s", p[i].days);
        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);
        fflush(stdin);
        printf("\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);

        fwrite(&p[i],sizeof(country),1,ct);
    }

    fclose(ct);
    printf("\n\t\t\t\tYour new place has been append.\n");
    printf("\n\t\t||1.SHOW NEW CLASSIC PACKAGE");
    printf("\n\t\t||2.BACK to Edit classic pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt8);
    switch(opt8)
    {
    case 1:
        ctdisplay();
        break;
    case 2:
        classicpack();
        break;
    case 3:
        EX();
        break;
    }

}
void ctupdate()
{
    int opt9;
    country p1;
    FILE *ct, *ct1;
    int srno,found=0;
    ct = fopen("classicpack1.txt", "r");
    ct1 = fopen("cttemp.txt", "w");
    printf("\tEnter the place serial no update: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,ct))
    {
        if(p1.srno == srno)
        {
            found = 1;
            fflush(stdin);
            printf("\tEnter the new  money: ");
            scanf("%d", &p1.money);

        }
        fwrite(&p1,sizeof(country),1,ct1);
    }
    fclose(ct);
    fclose(ct1);
    if(found)
    {
        ct1 = fopen("cttemp.txt", "r");
        ct = fopen("classicpack1.txt","w");

        while(fread(&p1,sizeof(country),1,ct1))
        {
            fwrite(&p1,sizeof(country), 1, ct);
        }
        fclose(ct);
        fclose(ct1);
    }

    else
        printf("\nNot found\n");
    fclose(ct);

    printf("\n\t\t\t\tYour new place Budget has been update.\n");
    printf("\n\t\t||1.SHOW NEW CLASSIC PACKAGE");
    printf("\n\t\t||2.BACK to Edit classic pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt9);
    switch(opt9)
    {
    case 1:
        ctdisplay();
        break;
    case 2:
        classicpack();
        break;
    case 3:
        EX();
        break;
    }

}

void ctdelete()
{
    int opt10;
    country p1;
    FILE *ct, *ct1;
    int srno,found=0;
    ct = fopen("classicpack1.txt", "r");
    ct1 = fopen("cttemp.txt", "w");
    printf("\tEnter the place serial no delete: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,ct))
    {
        if(p1.srno == srno)
        {
            found = 1;
        }
        else
            fwrite(&p1,sizeof(country),1,ct1);
    }
    fclose(ct);
    fclose(ct1);
    if(found)
    {
        ct1 = fopen("cttemp.txt", "r");
        ct = fopen("classicpack1.txt","w");

        while(fread(&p1,sizeof(country),1,ct1))
        {
            fwrite(&p1,sizeof(country), 1, ct);
        }
        fclose(ct);
        fclose(ct1);
    }

    else
        printf("\nNot found\n");
    fclose(ct);
    printf("\n\t\t\t\tYour new place has been delete.\n");
    printf("\n\t\t||1.SHOW NEW CLASSIC PACKAGE");
    printf("\n\t\t||2.BACK to Edit classic pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt10);
    switch(opt10)
    {
    case 1:
        ctdisplay();
        break;
    case 2:
        classicpack();
        break;
    case 3:
        EX();
        break;
    }

}

