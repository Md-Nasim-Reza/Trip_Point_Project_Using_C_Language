void login()
{
       char username[50],pword[50];
    int usrFound = 0,wrong,opt2,opt20;
    struct user usr;
    fgetc(stdin);
    FILE *fp;
    system("cls");
    system("color 74");
    box(71,3,102,7);
    gotoxy(76,5);
    printf("...%c",ch12);
    type(" USER LOG_In ");
    printf("%c...",ch12);
    box2(62,18,110,20);
	gotoxy(71,19);
    printf("Enter your username:     ");
    takeinput(username);
    box2(62,22,110,24);
	gotoxy(71,23);
    printf("Enter your password:     ");
    pass(pword);

    fp = fopen("Users.txt","r");
    while(fread(&usr,sizeof(struct user),1,fp))
    {
        if(!strcmp(usr.username,username))
        {
            if(!strcmp(usr.password,pword))
            {

                system("cls");
                system("color 70");
                PlaySound(TEXT("siaaudio1.wav"),NULL,SND_ASYNC);

                sleep(1);
                box3(55,6,118,8);
gotoxy(73,7);
printf("....YOUR LOG IN PROFILE....");

box3(55,10,118,23);
gotoxy(60,14);
 printf("---Cant wait to start! Here is your info %s ---",usr.fullName);

                gotoxy(70,16);
                printf("|Full Name:     %s",usr.fullName);
                gotoxy(70,17);
                printf("|Email:         %s",usr.email);
                gotoxy(70,18);
                printf("|Username:      %s",usr.username);
                gotoxy(70,19);
                printf("|Contact no.:   %s",usr.phone);

                wrong=1;
            }
            else
            {
                system("cls");
                system("color 74");
                printf("\n");
                PlaySound(TEXT("siaaudio3.wav"),NULL,SND_ASYNC);

                sleep(1);
                printf("\n\n\t\t\t\tInvalid Password!\n\n");
                wrong = 2;

            }
            usrFound = 1;
        }

    }
    if(usrFound==0)
    {
        printf("\n");
        PlaySound(TEXT("siaaudio4.wav"),NULL,SND_ASYNC);

        sleep(1);
        type("\n\n\t\t\t\tSorry! you are not registered yet!");
        wrong = 3;

    }
    fclose(fp);

    switch(wrong)
    {

    case 1:

        system("color 70");
box3(55,25,118,32);
gotoxy(70,26);
 printf("1.Main Menu");
gotoxy(70,27);
        printf("2.Log into another account");
        gotoxy(70,28);
        printf("3.Home Page");
        gotoxy(70,29);
        printf("4.Exit");
        gotoxy(70,31);
        printf("Enter your option:-\t");
        scanf("%d", &opt20);
        switch(opt20)
        {
        case 1:
            menu();
            break;
        case 2:
            login();
            break;
        case 3:
            homepage();
            break;
        case 4:
            EX();
            break;

        }
        break;

    case 2:
        printf("\n\t\t                                     Please Try again");
        printf("\n\t\t                                     1.Admin Panel Sign Up");
        printf("\n\t\t                                     2.Admin Login");
        printf("\n\t\t                                     3.User Sign Up");
        printf("\n\t\t                                     4.User Login");
        printf("\n\t\t                                     5.Exit");
        printf("\n\n\t\t                                   Enter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            reg2();
            break;
        case 2:
            login2();
            break;
        case 3:
            reg();
            break;
        case 4:
            login();
            break;
        case 5:
            EX();
            break;
        }
        break;
    case 3:
        printf("\n\t\t                                     Please Try again");
        printf("\n\t\t                                     1.Admin Panel Sign Up");
        printf("\n\t\t                                     2.Admin Login");
        printf("\n\t\t                                     3.User Sign Up");
        printf("\n\t\t                                     4.User Login");
        printf("\n\t\t                                     5.Exit");
        printf("\n\n\t\t                                   Enter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            reg2();
            break;
        case 2:
            login2();
            break;
        case 3:
            reg();
            break;
        case 4:
            login();
            break;
        case 5:
            EX();
            break;
