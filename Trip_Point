    printf("4. BANK");
box3(43,24,114,26);
    gotoxy(46,25);
	printf("         Enter Your Choice:       ");

    scanf("%d",&pay);
    switch(pay)

    {

    case 1:
        Bkash();
        break;
    case 2:
        roket();
        break;
    case 3:
        nagad();
        break;
    case 4:
        bank();
        break;
    }
}


void Bkash()
{
 char ch0[999];
 system("color 74");

    int bkash;
//    char username[50],pword[50];
//    struct user usr;
    int pinnumber,tkinput,substration,bklen;
    char bknumber[12];


    printf("\n\n\n\n\tYour total amount is %d tk",itotal);
    printf("\n\n\n\tPlease enter your bkash Number: ");
    scanf("%s",bknumber);
    bklen = strlen(bknumber);
    if(bklen==11)
    {
        printf("\n\n\tPay your total amount: ");
        scanf("%d",&tkinput);

        if(itotal==tkinput)
        {
            printf("\n\n\tPlease enter your PIN NO: ");
            scanf("%d",&pinnumber);
            system("cls");
            system("color 8F");
            FILE *cg;
            cg = fopen("customerdis.txt","r");
            printf("\n\n\n\t\t\t\t\t\t_________YOUR CUSTOM PACK DISPLAYED _________\n\n\n\n\n");
            printf("================================================================================================================================================================================\n\n");
            char input[512];
            while(fgets(input,512,cg))
            {

                printf("%s",input);
            }
            printf("================================================================================================================================================================================\n\n");


            printf("\n\n\t_______________YOUR PAYMENT %d PAID SUCCESFULLY_______________\n",itotal);

            printf("\n\n\n\t   OFFICE CONTRACT NUMBER : 01787678777 ");
            printf("\n\n\t\t\tTYPE YOUR CONTRACT NO :  \t");
    getchar();
    gets(ch0);
    FILE *fe;
    fe=fopen("admin user booking info.txt", "a");
    fprintf(fe,"CUSTOMER CONTRACT NO :  %s\n",ch0);
    fclose(fe);
           printf("\n\n\n\n\n                                                ...THANKS FOR BOOKING YOUR TRIP...WE WILL CONTRACT YOU WITHIN AN HOUR... ");
            itotal=0;
            printf("\n\n\n\n\n\n\n\t\t1.HOMEPAGE");
            printf("\n\t\t2.EXIT");
            printf("\n\nchoose option :  ");

            scanf("%d",&bkash);
            switch(bkash)
            {
            case 1:
                homepage();
                break;
            case 2:
                EX();
                break;
            }
        }
        else
        {
            substration=itotal-tkinput;
            printf("\n\n\tYour Remaining %d tk.....!",substration);
            printf("\n\n\tPlease You will have the whole money again");
            Bkash();

        }
    }
    else
    {

        printf("\n\tThe phone number must be 11 digits... so please Try not to inflict  11 digits less or 11 digits more\n");
        Bkash();

    }

}



