{
    int opt2;
    system("cls");
       box(66,3,94,7);
gotoxy(69,5);
printf(" ..EDIT BUDGET PACK.. ");
box(43,10,114,21);
    gotoxy(69,13);
    printf("||1.Create Packages");
    gotoxy(69,14);
    printf("||2.Display Packages");
    gotoxy(69,15);
    printf("||3.Append Packages");
    gotoxy(69,16);
    printf("||4.Update Budget Money");
    gotoxy(69,17);
    printf("||5.Delete Items");
    gotoxy(69,18);
    printf("||6.Back To Home");
box3(43,24,114,26);
    gotoxy(46,25);
	printf("         Enter Your Choice:       ");

    scanf("%d", &opt2);
    switch(opt2)
    {
    case 1:

        btcreate();
        break;
    case 2:
        btdisplay();
        break;
    case 3:
        btdisplay3();
        btappend();
//        btdisplay4();
        break;
    case 4:
        btdisplay3();
        btupdate();
//        btdisplay4();
        break;
    case 5:
        btdisplay3();
        btdelete();
//        btdisplay4();
        break;
    case 6:
        menu2();
        break;

    }
}

void btcreate()
{
    int opt6;
    country *p;
    FILE *bt;
    int n,i,j;
    system("cls");
    printf("\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    bt = fopen("budgetpack1.txt", "w");

    for(i=0; i<n; i++)
    {
        printf("\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);

        printf("\tEnter the money: ");
        scanf("%d", &p[i].money);
        fflush(stdin);
        printf("\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);
        fwrite(&p[i],sizeof(country),1,bt);
    }

    fclose(bt);
//    printf("\n\n\t\t||-----DISPLAY BUDGET PACKAGE-----||");
    printf("\n\t\t||1.SHOW BUDGET PACKAGE");
    printf("\n\t\t||2.BACK to Edit budgetpack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt6);
    switch(opt6)
    {
    case 1:
        btdisplay();
        break;
    case 2:
        budgetpack();
        break;
    case 3:
        EX();
        break;
    }

}




