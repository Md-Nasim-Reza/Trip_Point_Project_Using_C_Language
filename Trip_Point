int ch1=218,ch2=205,ch3=194,ch4=191,ch5=186,ch6=195,ch7=197,ch8=192,ch9=193,ch10=217,ch11=185,ch12=178;

box(62,15,118,25);

gotoxy(70,20);

printf("...%c",ch12);
