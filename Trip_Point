void box(int a,int b,int c,int d)
{
	int i,j;
	for(i=a;i<c;i++)
	{
		gotoxy(i,b);printf("%c",chh);
		gotoxy(i,d);printf("%c",chh);
	}
	for(j=b;j<d;j++)
	{
		gotoxy(a,j);printf("%c",chh1);
		gotoxy(c,j);printf("%c",chh1);
	}
		gotoxy(a,b);printf("%c",chh1);
		gotoxy(c,b);printf("%c",chh1);
		gotoxy(a,d);printf("%c",chh);
		gotoxy(c,d);printf("%c",chh);
}
void gotoxy(int x, int y)
{
    COORD coord;
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}
void box2(int a,int b,int c,int d)
{
	int i,j;
	for(i=a;i<c;i++)
	{
		gotoxy(i,b);printf("%c",ch13);
		gotoxy(i,d);printf("%c",ch13);
	}
	for(j=b;j<d;j++)
	{
		gotoxy(a,j);printf("%c",ch14);
		gotoxy(c,j);printf("%c",ch14);
	}
		gotoxy(a,b);printf("%c",ch15);
		gotoxy(c,b);printf("%c",ch16);
		gotoxy(a,d);printf("%c",ch17);
		gotoxy(c,d);printf("%c",ch18);
}

void box3(int a,int b,int c,int d)
{
	int i,j;
	for(i=a;i<c;i++)
	{
		gotoxy(i,b);printf("\xcd");
		gotoxy(i,d);printf("\xcd");
	}
	for(j=b;j<d;j++)
	{
		gotoxy(a,j);printf("\xba");
		gotoxy(c,j);printf("\xba");
	}
		gotoxy(a,b);printf("\xc9");
		gotoxy(c,b);printf("\xbb");
		gotoxy(a,d);printf("\xc8");
		gotoxy(c,d);printf("\xbc");
}
