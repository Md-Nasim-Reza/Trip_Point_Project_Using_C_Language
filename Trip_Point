{

    system("cls");
    printf("\n\n\n\t\t\t\t\t\t\tHOW MANY NIGHT YOU WANT TO STAY....?");
    printf("\n\n\t\t\t\t\t\t\tENTER THE NUMBER OF NIGHT :  ");
    int day;
    scanf("%d",&day);
    itotal= itotal* day;
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(" PRESS ENTER TO BOOK YOUR TICKET ");

    getch();
    AUSTRALIAticket();

}





