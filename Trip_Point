//
void ADD113()
{

    int opt13;

    FILE *sia = fopen("Bagerhat ticket.txt","r");
    char line[599];
    FILE *tk = fopen("Bagerhattickettk.txt","r");
    char total2[100];

    int c,count=1,count1=1;
    printf("\n\n\n>>Choose option>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            FILE *cg;
            printf(" \t\t\tTICKET ADDED...!!");
            cg = fopen("customerdis.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(cg);
            FILE *adb;
            adb = fopen("admin user booking info.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(adb);
//            printf("%s",line);
            FILE *ss;
            ss = fopen("user selection.txt","a");
            fprintf(cg,"TICKET : %s\n\n",line);
            fclose(ss);
        }

        count++;
    }
    while(fgets(total2,sizeof(total2),tk))
    {
        if(c==count1)
        {
            itotal2+=atoi(total2);
        }
        count1++;
    }
    fclose(tk);
    fclose(sia);
    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    printf("\n\n\n");
    printf("\n");

    printf(">>PRESS ENTER TO ADD HOW MANY SEAT YOU WANT.... ");
    getch();
    numtic();

}





