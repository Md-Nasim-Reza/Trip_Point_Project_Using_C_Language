    while(fgets(input,512,cg))
    {

        printf("%s",input);
    }
    printf("================================================================================================================================================================================");

    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    fclose(cg);
    printf("\n\n\n");
    printf("");
    printf("1. CONFIRM YOUR TRIP \n");
    printf("2. EXIT");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        payment();
        break;
    case 2:
        EX();
        break;
    }
}
//

void guide()
{
    system("cls");
    FILE *SIA = fopen("GUIDER.txt","r");
    char line[599];
    printf("\n\n\n\t\t\t\t\t\tDO YOU NEED A GUIDER OR ADVISER TO GUIDE YOUR TRIP WITH YOU.............. ?? ");
    printf("\n\n\t\t\t\t\t\tIF YOU WANT GUIDER WITH YOU THEN PAY MORE 12000 MONEY\n\n\t\t\t\t\t\tPRESS '1.YES' IF YOU WANT OR PRESS 'NO, IF YOU DONT WANT");
    printf("\n\t\t\t\t\t\t1. YES\n\t\t\t\t\t\t2. NO");
    printf("\n\n\n>>Choose option>>_  ");
    int choic,count=1,a=0;
    scanf("%d",&choic);
    switch(choic)
    {
    case 1:

        while(fgets(line,sizeof(line),SIA))
        {

            if(choic==count)
            {
                FILE *cg;
                printf("\n \t\t\t\tSO...! OUR GUIDER WILL ACCOMPANY YOU ON YOUR TRIP....!!");
                itotal+=12000;
                printf("\n\n\nTOTAL TAKA: %d /=",itotal);
                cg = fopen("customerdis.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(ss);

                printf("\n\n\n\n\t\t>> PRESS ENTER TO DIAPLAY YOUR CUSTOM PACK... ");
                getch();
                Chittagongdisplay();
            }
            count++;
        }
        break;
    case 2:
        while(fgets(line,sizeof(line),SIA))
        {

            if(choic==count)
            {

                FILE *cg;
                printf("\n\n\t\t\t\tNO GUIDER WILL ACCOMPANY YOU ");

                cg = fopen("customerdis.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");
                fprintf(cg,"%s\n\n",line);
                fclose(ss);

                printf("\n\n\n\n\t\t>> PRESS ENTER TO DIAPLAY YOUR CUSTOM PACK... ");
                getch();
                Chittagongdisplay();

            }
            count++;
        }
        break;
    }
}


