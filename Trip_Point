    printf("================================================================================================================================================================================\n");
    char input[512];
    while(fgets(input,512,cg))
    {

        printf("%s",input);
    }
    printf("================================================================================================================================================================================");

    printf("\n\n\nTOTAL TAKA: %d /=",itotal);
    fclose(cg);
    printf("\n\n\n");
    printf("");
    printf("1. CONFIRM YOUR TRIP \n");
    printf("2. EXIT");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        payment();
        break;
    case 2:
        EX();
        break;
    }
}



