struct user
{
    char fullName[50];
    char email[50];
    char password[50];
    char username[50];
    char phone[50];
    char requests[50];
};

void takeinput(char ch[50])
{
    fgets(ch,50,stdin);
    ch[strlen(ch) - 1] = 0;
}

void pass(char password[15])
{


    int count = 0;
    char ch;
    while (1)
    {
        ch = getch();
        if (ch == 13) //13 = ENTER
        {
            password[count] = '\0';
            break;
        }
        else if (ch == 8) // 8 = backspace     1234  *
        {
            if (count > 0)
            {
                count--;
                printf("\b \b");
            }
        }

        else
        {
            password[count] = ch;
            count++;
            printf("*");
        }
    }

}

char generateUsername(char email[50],char username[50])
{
    //abc123@gmail.com
    int i;
    for(i=0; i<strlen(email); i++)
    {
        if(email[i] == '@') break;
        else username[i] = email[i];
    }
    username[i] = '\0';
}


void reg()
{
    system("color 70");
    fgetc(stdin);
    int login_function_call = 0,opt2;
    FILE *fp;
    struct user user;
    char password2[50];
    system("cls");
    printf("\n\n\n\n\n\n\n\n\n");
    type("\t\t\tOK! lets set you up!");
    printf("\n\n\t\t\tGive me your full name:\t");
    takeinput(user.fullName);

    printf("\n\t\t\tEnter your email ID :    ");
    takeinput(user.email);
    printf("\n\t\t\tWhat is your cell NO.?:\t");
    takeinput(user.phone);
    printf("\n\t\t\tEnter your password:\t");
    pass(user.password);
    printf("\n\n\t\t\tConfirm your password:\t");
    pass(password2);


    if(!strcmp(user.password,password2))
    {
        generateUsername(user.email,user.username);
        fp = fopen("Users.txt","a");
        fwrite(&user,sizeof(struct user),1,fp);
        if(fwrite != 0)
        {
            system("cls");
            printf("\n\n\n\n\n\n\n\n\n");
            PlaySound(TEXT("siaaudio2.wav"),NULL,SND_ASYNC);

            sleep(1);
            type("\n\n\t\t\t\tcongratulation! Now you are a member of trip point Bangladesh!\n\n\t\t\t\tYour username is  ");
            printf("%s",user.username);
        }
        else
        {
            PlaySound(TEXT("siaaudio4.wav"),NULL,SND_ASYNC);

            sleep(1);
            printf("\n\n\n\n\n\n\n\n\nOops! Sorry, Something must have gone wrong :");
        }
        fclose(fp);
    }
    else
    {
        PlaySound(TEXT("siaaudio5.wav"),NULL,SND_ASYNC);

        sleep(1);
        printf("\n\n\t\tPassword do not match");
        printf("\n\n\n\t\tPlease Try again");
        printf("\n\t\t1.Try again");
        printf("\n\t\t2.User Login");
        printf("\n\t\t3.Home page");
        printf("\n\t\t4.Exit");
        printf("\n\t\tEnter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            reg();
            break;
        case 2:
            login();
            break;
        case 3:
            homepage();
            break;
        case 4:
            EX();
            break;
        }
        login_function_call = 1;
    }
    if(login_function_call == 0)
    {
        type("\n\n\t\t\t\tI'm very exited to plan trip with you!\n");
        type("\n\t\t\t\tYou are all set up, let's start planning now!!");
        printf("\n\t   1.User Login");
        printf("\n\t   2.Home page");
        printf("\n\t   3.Exit");
        printf("\n\t   Enter the Choice:\t");
        scanf("%d", &opt2);
        switch(opt2)
        {
        case 1:
            login();
            break;
        case 2:
            homepage();
            break;
        case 3:
            EX();
            break;
        }
        getch();

        login();
    }
}
