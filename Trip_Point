void btappend()
{
    int opt8;
    country *p;
    FILE *bt;
    int n,i,j;
    printf("\t\t\t\tEnter how many place you want : ");
    scanf("%d", &n);

    p = (country*)calloc(n, sizeof(country));
    bt = fopen("budgetpack1.txt", "a");

    for(i=0; i<n; i++)
    {
        printf("\t\t\t\t\tEnter the serial no: ");
        scanf("%d", &p[i]);
        fflush(stdin);
        printf("\t\t\t\tEnter place name: ");
        scanf("%[^\n]s", p[i].place);
        printf("\t\t\t\tEnter the money: ");
        scanf("%d", &p[i].money);
        fflush(stdin);
        printf("\t\t\t\tEnter Hotels name: ");
        scanf("%[^\n]s", p[i].hotel);

        fwrite(&p[i],sizeof(country),1,bt);
    }

    fclose(bt);
    printf("\n\t\t||1.SHOW NEW BUDGET PACKAGE");
    printf("\n\t\t||2.BACK to Edit Budget pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt8);
    switch(opt8)
    {
    case 1:
        btdisplay();
        break;
    case 2:
        budgetpack();
        break;
    case 3:
        EX();
        break;
    }


}
void btupdate()
{
    int opt9;
    country p1;
    FILE *bt, *bt1;
    int srno,found=0;
    bt = fopen("budgetpack1.txt", "r");
    bt1 = fopen("bttemp.txt", "w");
    printf("\tEnter the place serial no update: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,bt))
    {
        if(p1.srno == srno)
        {
            found = 1;
            fflush(stdin);
            printf("\tEnter the new  money: ");
            scanf("%d", &p1.money);

        }
        fwrite(&p1,sizeof(country),1,bt1);
    }
    fclose(bt);
    fclose(bt1);
    if(found)
    {
        bt1 = fopen("bttemp.txt", "r");
        bt = fopen("budgetpack1.txt","w");

        while(fread(&p1,sizeof(country),1,bt1))
        {
            fwrite(&p1,sizeof(country), 1, bt);
        }
        fclose(bt);
        fclose(bt1);
    }

    else
        printf("\nNot found\n");
    fclose(bt);
    printf("\n\t\t\t\tYour new place Budget has been update.\n");
    printf("\n\t\t||1.SHOW NEW BUDGET PACKAGE");
    printf("\n\t\t||2.BACK to Edit budget pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt9);
    switch(opt9)
    {
    case 1:
        btdisplay();
        break;
    case 2:
        budgetpack();
        break;
    case 3:
        EX();
        break;
    }
}
void btdelete()
{
    int opt10;
    country p1;
    FILE *bt, *bt1;
    int srno,found=0;
    bt = fopen("budgetpack1.txt", "r");
    bt1 = fopen("bttemp.txt", "w");
    printf("\tEnter the place serial no delete: ");
    scanf("%d", &srno);
    while(fread(&p1,sizeof(country),1,bt))
    {
        if(p1.srno == srno)
        {
            found = 1;
        }
        else
            fwrite(&p1,sizeof(country),1,bt1);
    }
    fclose(bt);
    fclose(bt1);
    if(found)
    {
        bt1 = fopen("bttemp.txt", "r");
        bt = fopen("budgetpack1.txt","w");

        while(fread(&p1,sizeof(country),1,bt1))
        {
            fwrite(&p1,sizeof(country), 1, bt);
        }
        fclose(bt);
        fclose(bt1);
    }

    else
        printf("\nNot found\n");
    fclose(bt);
    printf("\n\n");
    printf("\n\t\t\t\tYour new place Budget has been delete .\n");
    printf("\n\t\t||1.SHOW NEW BUDGET PACKAGE");
    printf("\n\t\t||2.BACK to Edit budget pack");
    printf("\n\t\t||3.EXIT");
    printf("\n\n\t>>Enter the choice>> _ ");
    scanf("%d",&opt10);
    switch(opt10)
    {
    case 1:
        btdisplay();
        break;
    case 2:
        budgetpack();
        break;
    case 3:
        EX();
        break;
    }
}

