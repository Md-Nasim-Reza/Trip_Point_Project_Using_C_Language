        break;
    }

}

void login2()
{
    char username[50],username1[50],pword[50];
    int usrFound = 0,wrong,opt2;
    struct user usr;
    fgetc(stdin);
    FILE *fp;
    system("cls");
     system("color 74");
    box(71,3,102,7);
    gotoxy(76,5);
    printf("...%c",ch12);
    type(" ADMIN LOG_In ");
    printf("%c...",ch12);
    box2(62,18,110,20);
	gotoxy(71,19);
    printf("Enter your username:     ");
    takeinput(username1);
    box2(62,22,110,24);
	gotoxy(71,23);
    printf("Enter your password:     ");
    pass(pword);
    fp = fopen("admin.txt","r");
    while(fread(&usr,sizeof(struct user),1,fp))
    {
        if(!strcmp(usr.username,username1))
        {
            if(!strcmp(usr.password,pword))
            {
                system("cls");
                system("color 70");
                PlaySound(TEXT("siaaudio1.wav"),NULL,SND_ASYNC);
                sleep(1);
                box3(55,6,118,8);
gotoxy(73,7);
printf("....YOUR LOG IN PROFILE....");
box3(55,10,118,23);
gotoxy(60,14);
                printf("---Cant wait to start! Here is your info %s ---",usr.fullName);
                gotoxy(70,16);
                printf("|Full Name:     %s",usr.fullName);
                gotoxy(70,17);
                printf("|Email:         %s",usr.email);
                gotoxy(70,18);
                printf("|Username:      %s",usr.username);
                gotoxy(70,19);
                printf("|Contact no.:   %s",usr.phone);

                wrong=1;
            }
            else
            {
                system("cls");
                system("color 74");
                printf("\n\n\n\n\n\n\n\n\n");
                PlaySound(TEXT("siaaudio3.wav"),NULL,SND_ASYNC);
                sleep(1);
                printf("\t\t\t\tInvalid Password!\n\n");

                wrong = 2;

            }
            usrFound = 1;
        }
        break;
    }
    if(usrFound==0)
    {
        printf("\n");
        PlaySound(TEXT("siaaudio4.wav"),NULL,SND_ASYNC);
        sleep(1);

        type("\n\n\n\n\t\t\t\t\t\t\t\t    Sorry! you are not registered yet!\n\n");
        wrong = 3;

    }
    fclose(fp);

    switch(wrong)
    {
    case 1:
        //system("cls");
         system("color 70");
