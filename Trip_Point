//
void ADD()
{

    int opt13,A=0;
    FILE *sia = fopen("Chittagong.txt","r");
    char line[599];

    int c,count=1;
    printf("\n\n\n>>Choose option>>_  ");
    scanf("                                %d",&c);
    while(fgets(line,sizeof(line),sia))
    {
        if(c==count)
        {

            if(A==0)
            {
                FILE *cg;
                printf(" \t\t\tPLACES ADDED...!!");
                cg = fopen("customerdis.txt","w");
                fprintf(cg,"PLACE : %s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(adb,"_________________________________________________________________________________________________________________________________________________________________________________\nCUSTOMER CHOICES:\n\n");

                fprintf(cg,"PLACE : %s\n\n",line);
                fclose(adb);
                FILE *ss;
                {
                    ss = fopen("user selection.txt","a");
                    fprintf(ss,"_________________________________________________________________________________________________________________________________________________________________________________\nYOUR BOOKED TRIP:\n\n");
                    fprintf(cg,"PLACE : %s\n\n",line);
                }



                fclose(ss);
            }
            else
            {
                FILE *cg;
                printf(" \t\t\tPLACES ADDED...!!");
                cg = fopen("customerdis.txt","a");
                fprintf(cg,"PLACE : %s\n\n",line);
                fclose(cg);
                FILE *adb;
                adb = fopen("admin user booking info.txt","a");
                fprintf(cg,"PLACE : %s\n\n",line);
                fclose(adb);
                FILE *ss;
                ss = fopen("user selection.txt","a");
                fprintf(cg,"PLACE : %s\n\n",line);
                fclose(ss);

            }

        }
        A++;
        count++;
    }
    fclose(sia);

    printf("\n\n\n");
    printf("\n");
    printf("1. ADD PLACES\n");
    printf("2. NEXT SELECT HOTELS ");
    printf("\n\n>>Choose option>>_  ");

    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        Chittagong();
        break;
    case 2:
        Chittagonghotel();
        break;
    }
}
