void tripforeign()
{
    system("cls");

    int opt13;
    FILE *zila;
    zila = fopen("COUNTRY.txt","r");

    char input[999];
    printf("\n\n\n");
    printf("\t\t\t                                        ||                                               ||");
    printf("\n");
    printf("\t\t\t                              ..........         HERE IS 10 MOST BEAUTYFUL COUNTRY         ......... ");
    printf("\n");
    printf("\t\t\t                                        ||                                               ||");
    printf("\n\n\n\n\n");
    printf("\n");
    printf("\n");
    printf("\n");
    while(fgets(input,999,zila))
    {
     printf("%s",input);
    }


    fclose(zila);
    printf("\n\n\n");

    printf("\n\n                                                                    >>Choose option>>_  ");
    scanf("%d",&opt13);
    switch(opt13)
    {
    case 1:
        INDIA();
        break;
    case 2:
        NEPAL();
        break;
    case 3:
        SWITZERLAND();
        break;
    case 4:
        AUSTRALIA();
        break;
    case 5:
        JAPAN();
        break;
    case 6:
        FRANCE();
        break;
    case 7:
        CANADA();
        break;
    case 8:
        ITALY();
        break;
    case 9:
        THEUSA();
        break;
    case 10:
        THEUNITEDKINGDOM();
        break;
    case 11:
        menu();
        break;
    case 12:
        EX();
        break;


    }
}


